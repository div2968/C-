#include <iostream>
#include <string>
using namespace std;

// Define a class Employee
class Employee {
private:
    string name;
    string department;
    double salary;

public:
    // Constructor to initialize data members
    Employee(string empName, string empDept, double empSalary) {
        name = empName;
        department = empDept;
        salary = empSalary;
    }

    // Function to display employee details
    void displayDetails() {
        cout << "Name: " << name << endl;
        cout << "Department: " << department << endl;
        cout << "Salary: $" << salary << endl;
    }
};

int main() {
    // Create an object of class Employee
    Employee emp1("John Doe", "IT", 5000.0);

    // Display details of the employee using member function
    cout << "Employee Details:" << endl;
    emp1.displayDetails();

    return 0;
}
