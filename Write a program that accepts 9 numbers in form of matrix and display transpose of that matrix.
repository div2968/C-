#include <iostream>
using namespace std;

const int SIZE = 3;

// Function to print a matrix
void printMatrix(int matrix[SIZE][SIZE]) {
    for (int i = 0; i < SIZE; ++i) {
        for (int j = 0; j < SIZE; ++j) {
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }
}

// Function to calculate transpose of a matrix
void transpose(int matrix[SIZE][SIZE]) {
    int temp;

    // Swap elements across the diagonal
    for (int i = 0; i < SIZE; ++i) {
        for (int j = i + 1; j < SIZE; ++j) {
            temp = matrix[i][j];
            matrix[i][j] = matrix[j][i];
            matrix[j][i] = temp;
        }
    }
}

int main() {
    int matrix[SIZE][SIZE];

    // Input matrix elements from the user
    cout << "Enter 9 numbers for a 3x3 matrix:" << endl;
    for (int i = 0; i < SIZE; ++i) {
        for (int j = 0; j < SIZE; ++j) {
            cin >> matrix[i][j];
        }
    }

    // Display the original matrix
    cout << "Original Matrix:" << endl;
    printMatrix(matrix);

    // Calculate and display the transpose of the matrix
    transpose(matrix);
    cout << "Transpose of Matrix:" << endl;
    printMatrix(matrix);

    return 0;
}
