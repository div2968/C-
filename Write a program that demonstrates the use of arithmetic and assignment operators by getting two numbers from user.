#include <iostream>

int main() {
    int num1, num2;

    // Input first number
    std::cout << "Enter the first number: ";
    std::cin >> num1;

    // Input second number
    std::cout << "Enter the second number: ";
    std::cin >> num2;

    // Arithmetic operations
    int sum = num1 + num2;
    int difference = num1 - num2;
    int product = num1 * num2;
    int quotient = num1 / num2; // Integer division
    int remainder = num1 % num2;

    // Display results
    std::cout << "Sum: " << num1 << " + " << num2 << " = " << sum << std::endl;
    std::cout << "Difference: " << num1 << " - " << num2 << " = " << difference << std::endl;
    std::cout << "Product: " << num1 << " * " << num2 << " = " << product << std::endl;
    std::cout << "Quotient (integer division): " << num1 << " / " << num2 << " = " << quotient << std::endl;
    std::cout << "Remainder: " << num1 << " % " << num2 << " = " << remainder << std::endl;

    // Assignment operators
    int result = 0;
    result += num1; // result = result + num1;
    std::cout << "result += num1: " << result << std::endl;
    result -= num2; // result = result - num2;
    std::cout << "result -= num2: " << result << std::endl;
    result *= num1; // result = result * num1;
    std::cout << "result *= num1: " << result << std::endl;
    result /= num2; // result = result / num2;
    std::cout << "result /= num2: " << result << std::endl;
    result %= num1; // result = result % num1;
    std::cout << "result %= num1: " << result << std::endl;

    return 0;
}
